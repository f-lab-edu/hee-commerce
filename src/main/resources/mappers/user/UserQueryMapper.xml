<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hcommerce.heecommerce.user.UserQueryMapper">

    <select id="findByPhoneNumber" resultType="String">
        SELECT
            phone_number
        FROM
            user
        WHERE phone_number = #{phoneNumber}
    </select>

    <select id="findByLoginId" resultType="UserSignInResponseDto">
        SELECT
            login_id, password
        FROM
            user
        WHERE login_id = #{loginId}
    </select>

    <select id="findUserIdByLoginId" resultType="Long">
        SELECT
            id
        FROM
            user
        WHERE login_id = #{loginId} AND deleted_at IS NULL
    </select>

</mapper>